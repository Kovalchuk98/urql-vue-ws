{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "strict": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
        "~": [
          "../src"
        ],
        "~/*": [
          "../src/*"
        ],
        "@": [
          "../src"
        ],
        "@/*": [
          "../src/*"
        ],
        "~~": [
          ".."
        ],
        "~~/*": [
          "../*"
        ],
        "@@": [
          ".."
        ],
        "@@/*": [
          "../*"
        ],
        "assets": [
          "../src/assets"
        ],
        "assets/*": [
          "../src/assets/*"
        ],
        "public": [
          "../src/public"
        ],
        "public/*": [
          "../src/public/*"
        ],
        "#imports": [
          "./imports"
        ],
        "#build": [
          "."
        ],
        "#build/*": [
          "./*"
        ],
        "#components": [
          "./components"
        ]
      }
    }
  }